        <title>{% block title %}Bienvenue!{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <!-- Navbar version mobile -->
        <nav class="navbar navbar-expand-md navbar-dark bg-danger d-md-none">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#mobileNavbarContent">
                <td class="navbar-toggler-icon"></td>
            </button>
            <div class="collapse navbar-collapse" id="mobileNavbarContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('homepage') }}">Accueil</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('used-car') }}">Occasions</a>
                    </li>
                </ul>
            </div>
            <div class="ml-auto">
                <a href="{{ path('connexion') }}">
                    <img src="{{ asset('svg/person-fill.svg') }}" alt="Person" class="navbar-person">
                </a>
                <a href="{{ path('contact') }}">
                    <img src="{{ asset('svg/telephone-fill.svg') }}" alt="Telephone" class="navbar-telephone">
                </a>
            </div>
        </nav>

        <!-- Navbar version desktop -->
        <nav class="navbar navbar-expand-md navbar-dark bg-danger d-none d-md-flex">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('homepage') }}">Accueil</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('used-car') }}">Occasions</a>
                </li>
            </ul>
            <a href="{{ path('connexion') }}">
                <img src="{{ asset('svg/person-fill.svg') }}" alt="Person" class="navbar-person">
            </a>
            <a href="{{ path('contact') }}">
                <img src="{{ asset('svg/telephone-fill.svg') }}" alt="Telephone" class="navbar-telephone">
            </a>
        </nav>

        <!-- Contenu principal -->
        <div>
            {% block body %}{% endblock %}
        </div>

        <!-- Footer -->
        <footer class="footer navbar-dark bg-danger">
            <div class="row openingTime">
                <div class="col-1"></div>
                <div class="openingTimeContainer col-8">
                    <table>
                        <tr>
                            <th colspan="2" class="openingTimeTitle">Horaires d'ouverture</th>
                        </tr>
                        <tr class="openingTimeText" class="openingTimeText">
                            <td>lun.:</td>
